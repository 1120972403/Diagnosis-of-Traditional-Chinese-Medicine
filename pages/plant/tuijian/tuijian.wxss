/* pages/plant/tuijian/tuijian.wxss */


.weui-grid {
  border: 0;
}

.weui-grid {
  position: relative;
  float: left;
  padding: 20px 10px;
  width: 33.33333333%;
  box-sizing: border-box;
  /* border-right: 1rpx solid #d9d9d9;
  border-bottom: 1rpx solid #d9d9d9; */
}


.weui-grid__icon {
  display: block;
  width: 80px;
  height: 80px;
  border-radius: 20px;
  margin: 0 auto;
}

.weui-grid__label {
  margin-top: 5px;
  display: block;
  text-align: center;
  color: #000;
  font-size: 30rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
